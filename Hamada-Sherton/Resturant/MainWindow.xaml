        <Label x:Name="TotalPay" Content="0.00" HorizontalAlignment="Left" Height="47" Margin="71,273,0,0" Grid.Row="2" VerticalAlignment="Top" Width="69" Foreground="White" FontSize="30" Grid.Column="2"/>
        <ListView x:Name="CategoryMenu" Grid.ColumnSpan="3" Height="167" Grid.RowSpan="2" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" Margin="0,-21,334,0" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel IsItemsHost="True"  Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <WrapPanel x:Name="SubMenu" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="523" Margin="0,146,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="1037" Background="#FF3C3C3C" FlowDirection="RightToLeft"/>
        <ListView x:Name="BillViewCat" HorizontalAlignment="Left" Height="492" Margin="111,0,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="231" FlowDirection="RightToLeft" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Column="2" FontSize="16" FontWeight="Medium" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="الصنف" Width="237"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="BillViewNum" HorizontalAlignment="Left" Height="492" Margin="73,0,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="60" FlowDirection="RightToLeft" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Column="2" FontSize="16" FontWeight="Medium">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="الكمية" Width="63"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="BillViewCost" HorizontalAlignment="Left" Height="492" Margin="11,0,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="63" FlowDirection="RightToLeft" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Column="2" FontSize="16" FontWeight="Medium">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="السعر" Width="62"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="QuantityBtn" Content="0" Grid.Column="2" HorizontalAlignment="Left" Margin="31,122,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="50" FontSize="18" FontWeight="Bold" Background="#FF3C3C3C" Foreground="#FFF3EBEB" Click="QuantityBtn_Click"/>
        <Button x:Name="QuantityBtn0" Content="1" Grid.Column="2" HorizontalAlignment="Left" Margin="89,122,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="50" RenderTransformOrigin="0.42,0.58" FontSize="18" FontWeight="Bold" Background="#FF3C3C3C" Foreground="#FFF9F9F9" Click="QuantityBtn0_Click"/>
        <Button x:Name="QuantityBtn1" Content="2" Grid.Column="2" HorizontalAlignment="Left" Margin="149,122,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="50" Click="Button_Click_1" FontSize="18" FontWeight="Bold" Background="#FF3C3C3C" Foreground="#FFF9F9F9"/>
