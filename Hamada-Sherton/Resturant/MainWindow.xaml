<Window x:Class="Resturant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}" Width="{DynamicResource {x:Static SystemParameters.PrimaryScreenWidthKey}}" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None" MinWidth="0">

    <Grid Margin="0,0,-6,-1">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="1027*"/>
            <ColumnDefinition Width="345*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="ButtonExit" Grid.ColumnSpan="2" Content="خروج" HorizontalAlignment="Left" Height="43" Margin="41,308,0,0" Grid.Row="2" VerticalAlignment="Top" Width="106" Foreground="#FFFEFEFE" FontSize="24" FontWeight="Medium" Click="Button_Click" Cursor="Hand" MouseEnter="Button_MouseEnter" Background="#FF3C3C3C" VerticalContentAlignment="Stretch"/>
        <Rectangle Fill="#FFFDFDFD" HorizontalAlignment="Left" Height="277" Margin="10,108,0,0" Grid.Row="2" VerticalAlignment="Top" Width="335" Grid.Column="2"/>
        <Label Content=": الإجمالى" HorizontalAlignment="Left" Height="46" Margin="160,273,0,0" Grid.Row="2" VerticalAlignment="Top" Width="133" Foreground="White" FontSize="30" Grid.Column="2"/>
        <Button Content="دليفري" HorizontalAlignment="Left" Height="31" Margin="54,320,0,0" Grid.Row="2" VerticalAlignment="Top" Width="70" Grid.Column="2" Background="#FF3C3C3C" Foreground="White" FontWeight="Medium"/>
        <Button Content="الغاء" HorizontalAlignment="Left" Height="31" Margin="137,320,0,0" Grid.Row="2" VerticalAlignment="Top" Width="70" Grid.Column="2" Background="#FF3C3C3C" Foreground="White" FontWeight="Medium"/>
