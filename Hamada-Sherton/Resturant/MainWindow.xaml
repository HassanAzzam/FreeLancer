        <Button x:Name="QuantityBtn7" Content="8" Grid.Column="2" HorizontalAlignment="Left" Margin="209,184,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="50" FontSize="18" FontWeight="Bold" Background="#FF3C3C3C" Foreground="#FFF9F9F9" Click="QuantityBtn7_Click"/>
        <Button x:Name="QuantityBtn6" Content="7" Grid.Column="2" HorizontalAlignment="Left" Margin="149,184,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="50" FontSize="18" FontWeight="Bold" Background="#FF3C3C3C" Foreground="#FFF9F9F9" Click="QuantityBtn6_Click"/>
        <Button x:Name="QuantityBtn5" Content="6" Grid.Column="2" HorizontalAlignment="Left" Margin="89,184,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="50" FontSize="18" FontWeight="Bold" Background="#FF3C3C3C" Foreground="#FFF9F9F9" Click="QuantityBtn5_Click"/>
        <Button x:Name="QuantityBtn4" Content="5" Grid.Column="2" HorizontalAlignment="Left" Margin="31,184,0,0" Grid.Row="2" VerticalAlignment="Top" Width="50" Height="50" FontSize="18" FontWeight="Bold" Background="#FF3C3C3C" Foreground="#FFF3EBEB" Click="QuantityBtn4_Click"/>
        <Button x:Name="QuantityRes" Content="مسح" Grid.Column="2" HorizontalAlignment="Left" Height="31" Margin="31,244,0,0" Grid.Row="2" VerticalAlignment="Top" Width="290" FontSize="18" FontWeight="Medium" Background="#FF3C3C3C" Foreground="White" Click="Button_Click_2"/>
