        <CheckBox x:Name="KetchupBox" Grid.ColumnSpan="2" Content="بدون كاتشب" Margin="764,327,160,39" Grid.Row="2" FontSize="14" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Cursor="Hand" FlowDirection="RightToLeft"/>
        <CheckBox x:Name="TehenaBox" Grid.ColumnSpan="2" Content="بدون طحينة" Margin="630,327,294,39" Grid.Row="2" FontSize="14" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Cursor="Hand" FlowDirection="RightToLeft"/>
        <CheckBox x:Name="SandwichBox" Grid.ColumnSpan="2" Content="بدون مايونيز" Margin="475,327,425,39" Grid.Row="2" FontSize="14" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Cursor="Hand" FlowDirection="RightToLeft"/>

    </Grid>
</Window>
